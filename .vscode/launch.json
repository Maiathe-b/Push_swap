// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug push_swap",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/push_swap",
      "args": ["27 77 29 80 47 34 62 66 71 60 3 10 64 49 74 44 6 24 35 65 92 98 48 94 5 28 56 26 39 15 91 53 25 89 99 41 31 58 42 12 16 7 20 87 54 50 86 79 95 78 1 23 59 11 76 2 70 33 57 22 38 18 82 81 9 30 43 13 63 51 36 100 17 85 83 69 84 96 93 61 75 68 40 8 14 32 37 45 55 52 73 46 4 72 97 67 21 88 19 90"],  // change this to simulate input
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build push_swap",
      "miDebuggerPath": "/usr/bin/gdb"  // Make sure gdb is installed
    }
  ]
}
